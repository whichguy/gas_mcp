{
  "name": "gas-server",
  "version": "1.0.0",
  "description": "MCP server for Google Apps Script: CommonJS module system, ad-hoc code execution, Unix-inspired commands (cat, grep, ls), and AI-assisted development",
  "main": "dist/src/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:prod",
    "build:prod": "npm run clean && npx tsc -p tsconfig.production.json && npm run copy:assets",
    "build:dev": "npm run clean && npx tsc && npm run copy:assets",
    "build:incremental": "npx tsc -p tsconfig.production.json && npm run copy:assets",
    "build:watch": "concurrently \"npx tsc --watch\" \"npm run copy:assets:watch\"",
    "build:bundle": "node scripts/bundle.js",
    "build:production": "node scripts/production-build.js",
    "clean": "rm -rf dist",
    "copy:assets": "node scripts/copy-assets.js",
    "copy:assets:watch": "chokidar \"src/**/*.{js,json}\" -c \"npm run copy:assets\"",
    "test": "npm run test:core",
    "test:unit": "mocha test/unit/**/*.test.ts",
    "test:core": "mocha test/system/protocol/consolidated-core.test.ts --timeout 30000",
    "test:integration": "npm run build && GAS_INTEGRATION_TEST=true mocha 'test/integration/**/*.test.ts' --timeout 300000",
    "test:system": "npm run build && mocha 'test/system/**/*.test.ts' --timeout 30000",
    "test:security": "mocha 'test/security/**/*.test.ts' --timeout 15000",
    "test:performance": "mocha 'test/performance/**/*.test.ts' --timeout 60000",
    "test:all": "npm run test:unit && npm run test:core",
    "test:git": "node test/verification/verify-git-sync.cjs",
    "test:auth": "node test/verification/verify-auth.cjs",
    "test:files": "node test/verification/verify-file-ops.cjs",
    "test:project": "node test/verification/verify-project-mgmt.cjs",
    "test:execution": "node test/verification/verify-execution.cjs",
    "test:server": "node test/verification/verify-mcp-server.cjs",
    "test:all-verify": "node test/verification/run-all-tests.cjs",
    "test:production": "node test/verification/production-readiness-report.cjs",
    "start": "npm run build && node dist/src/index.js --config ./gas-config.json",
    "dev": "npm run build:watch",
    "lint": "eslint src/**/*.ts --fix",
    "bundle:analyze": "npx esbuild-visualizer dist/src/index.js"
  },
  "keywords": [
    "mcp",
    "google-apps-script",
    "oauth",
    "filesystem",
    "dynamic-execution",
    "code-execution",
    "web-app-deployment"
  ],
  "author": "MCP Gas Server",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "@types/turndown": "^5.0.5",
    "google-auth-library": "^9.15.1",
    "googleapis": "^128.0.0",
    "marked": "^16.2.1",
    "open": "^8.4.2",
    "turndown": "^7.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "@types/sinon": "^17.0.4",
    "chai": "^4.3.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.0",
    "esbuild": "^0.19.0",
    "esbuild-visualizer": "^0.4.0",
    "eslint": "^8.45.0",
    "mocha": "^10.2.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "mcpServers": {
    "gas": {
      "command": "node",
      "args": [
        "dist/src/index.js",
        "--config",
        "./gas-config.json"
      ],
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
}
